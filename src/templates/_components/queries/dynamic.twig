{% import "_includes/forms" as forms %}

{% set rows = [] %}
{% set variables = record.settings.variables ?? [] %}
{% for key, value in variables %}
    {% set rows = rows|merge([{
        key: {
            value: key
        },
        value: {
            value: value
        }
    }]) %}
{% endfor %}

{{ forms.editableTableField({
    label: "Variables"|t('app'),
    id: 'variables',
    name: 'variables',
    cols: {
        key: {
            type: 'singleline',
            heading: "Key"|t('force'),
            info: "The variable key, used to dynamically construct the query."|t('force'),
            code: true
        },
        value: {
            type: 'singleline',
            heading: "Value"|t('force'),
            info: "The default value, which can be overwritten."|t('force'),
            code: true
        },
    },
    rows: rows,
    errors: []
}) }}